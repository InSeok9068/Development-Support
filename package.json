{
  "name": "development-support",
  "description": "개발 도우미",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:format": "turbo run lint:format",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "dayjs": "^1.11.9",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.9",
    "eslint": "^8.48.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-config-custom": "workspace:*",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.7.1"
}
