{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server Debug",
      "env": {
        "NODE_ENV": "development"
      },
      "args": ["${workspaceFolder}/apps/backend/src/app.ts"],
