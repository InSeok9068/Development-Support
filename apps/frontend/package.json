{
  "name": "development-support-fronted",
  "description": "개발 도우미 (프론트엔드)",
  "scripts": {
    "test": "vitest",
    "test:integration": "vitest",
    "test:ui": "vitest --ui",
    "dev": "vite --host --port 3000",
    "preview": "vite preview",
    "build": "run-p type-check build-only",
    "build:dev": "run-p type-check build-only:dev",
    "build-only": "vite build --emptyOutDir",
    "build-only:dev": "vite build --emptyOutDir --mode development",
    "type-check": "vue-tsc --noEmit -p tsconfig.build.json --composite false",
    "lint": "eslint \"src/**/*.{ts,js,vue}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js,vue}\" --fix",
    "lint:format": "prettier --write .",
    "codegen": "graphql-codegen",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "@apollo/client": "^3.10.8",
    "@vue/apollo-composable": "4.0.2",
    "@vueuse/core": "^10.11.0",
    "axios": "^1.7.2",
    "chart.js": "^4.4.3",
    "firebase": "^10.12.4",
    "firebaseui": "^6.1.0",
    "graphql": "^16.9.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.0",
    "vue": "^3.4.33",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.7",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "eslint-plugin-vue": "^9.27.0",
    "graphql-codegen-typescript-validation-schema": "^0.16.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sass": "^1.77.8",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.4",
    "vite-plugin-remove-console": "^2.2.0",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.26"
  }
}
