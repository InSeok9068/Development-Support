{
  "name": "development-support-fronted",
  "description": "개발 도우미 (프론트엔드)",
  "scripts": {
    "test": "vitest",
    "dev": "vite --host --port 3000",
    "preview": "vite preview",
    "build": "run-p type-check build-only",
    "build:dev": "run-p type-check build-only:dev",
    "build-only": "vite build --emptyOutDir",
    "build-only:dev": "vite build --emptyOutDir --mode development",
    "type-check": "vue-tsc --noEmit -p tsconfig.build.json --composite false",
    "lint": "eslint \"src/**/*.{ts,js,vue}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js,vue}\" --fix",
    "lint:format": "prettier --write .",
    "codegen": "graphql-codegen",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@vue/apollo-composable": "4.0.0-beta.11",
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "firebase": "^10.5.2",
    "firebaseui": "^6.1.0",
    "graphql": "^16.8.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.4",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.9.4",
    "eslint-plugin-vue": "^9.18.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.5.0",
    "vite-plugin-remove-console": "^2.1.1",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^1.8.22"
  }
}
