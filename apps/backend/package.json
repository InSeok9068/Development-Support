{
  "name": "development-support-backend",
  "description": "개발 도우미 (백엔드)",
  "scripts": {
    "test": "vitest",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "start": "tsc && cross-env NODE_ENV=production ts-node -r tsconfig-paths/register dist/app.js",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:format": "prettier --write .",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:generate": "prisma generate",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "codegen": "ts-node -r tsconfig-paths/register codegen.ts",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.6.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "firebase-admin": "^11.11.0",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^6.9.7",
    "puppeteer": "^21.5.1",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node-telegram-bot-api": "^0.63.1",
    "@types/nodemailer": "^6.4.14",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "tsconfig-paths": "^4.2.0"
  }
}
