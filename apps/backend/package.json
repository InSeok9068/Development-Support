{
  "name": "development-support-backend",
  "description": "개발 도우미 (백엔드)",
  "scripts": {
    "test": "cross-env NODE_ENV=development vitest /unit",
    "test:integration": "cross-env NODE_ENV=development vitest /integration",
    "test:ui": "cross-env NODE_ENV=development vitest /unit --ui",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "start": "pm2 start ecosystem.config.js --env production",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:format": "prettier --write .",
    "prisma:migrate": "prisma migrate dev --name migration",
    "prisma:migrate-create": "prisma migrate dev --create-only --name migration",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "codegen": "ts-node -r tsconfig-paths/register codegen.ts",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "@bull-board/express": "^5.21.1",
    "@escape.tech/graphql-armor": "^3.0.1",
    "@google-cloud/translate": "^8.3.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "@graphql-tools/schema": "^10.0.4",
    "@prisma/client": "^5.17.0",
    "axios": "^1.7.2",
    "bullmq": "^5.10.3",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "cross-env": "^7.0.3",
    "dataloader": "^2.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "firebase-admin": "^12.2.0",
    "graphql": "^16.9.0",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.23.0",
    "graphql-shield": "^7.6.5",
    "graphql-yoga": "^5.6.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.9.14",
    "puppeteer": "^22.13.1",
    "redis": "^4.6.15",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/nodemailer": "^6.4.15",
    "nodemon": "^3.1.4",
    "prisma": "^5.17.0",
    "tsconfig-paths": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest-mock-extended": "^1.3.2"
  }
}
